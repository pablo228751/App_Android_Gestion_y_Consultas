<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DatoFondo"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/Calificacion0"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Calificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_tmpnp_codigo"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="#6699FF"
                android:text="Codigo"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/text_cod_cat"
                android:layout_width="57dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/DatoCeleste"
                android:text="  Cant:" />

            <TextView
                android:id="@+id/text_tmpnp_cantidad"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="#AA0000"
                android:text="Cantidad"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_tmpnp_nombre"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Calificacion"
            android:layout_alignLeft="@+id/Calificacion"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="0dp"
            android:text="Nombre Codigo"
            android:textColor="@color/DatoGris" />

        <LinearLayout
            android:id="@+id/Calificacion2"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Calificacion0"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textColor="@color/DatoCeleste"
                android:text=" $  " />

            <TextView
                android:id="@+id/text_tmpnp_monto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="precio"
                android:textColor="#AA0000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textColor="@color/DatoCeleste"
                android:text=" Total $ " />

            <TextView
                android:id="@+id/text_tmpnp_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:text="Total"
                android:textColor="#AA0000"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>