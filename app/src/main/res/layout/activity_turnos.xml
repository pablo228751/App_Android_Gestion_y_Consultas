<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
     >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/et_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:textColor="@color/DatoGris"
            android:textSize="18sp"
            android:text="Turnos" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/ima_menos_tu"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="5dp"

                android:src="@drawable/menos" />


            <TextView
                android:id="@+id/et_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:layout_margin="3dp"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/edit_fecha_tu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:gravity="center"
                android:textSize="18dp"
                android:text="  Fecha  "
                android:textColor="@color/DatoCeleste"
                android:singleLine="true" >

                <requestFocus />
            </EditText>

            <ImageButton
                android:id="@+id/ima_calendario_tu"
                android:layout_width="10dp"
                android:layout_height="10dp"

                android:layout_margin="5dp"
                android:src="@drawable/menos"
                />

            <ImageButton
                android:id="@+id/ima_mas_tu"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="5dp"

                android:src="@drawable/mas" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/butt_calendario_tu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/azul_3"
                android:textColor="#FFFFFF"

                android:layout_margin="5dp"
                android:text="Buscar" />

            <Button
                android:id="@+id/butt_nuevo_tu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/DatoGris"
                android:text="Nuevo"
                android:layout_margin="5dp"
                android:textColor="#000000"
                android:textSize="11sp"
                android:textStyle="italic" />
        </LinearLayout>

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </ListView>

    </LinearLayout>

</RelativeLayout>
