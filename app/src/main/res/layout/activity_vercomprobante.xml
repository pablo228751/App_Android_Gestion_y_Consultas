<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:background="#FFFFFF"
    >
    <TextView
        android:id="@+id/et_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="DETALLE DE LA PRESTACIÃ“N"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="18sp" />


    <LinearLayout
        android:id="@+id/lin_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_titulo"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_vercom_nro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/DatoCeleste"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="Nro"
             />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lin_11">

        <TextView
            android:id="@+id/text_vercom_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="Fecha" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lin_1">

        <TextView
            android:id="@+id/text_vercom_oper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D50000"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="oper"
             />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lin_2" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="#263238"
            android:textSize="16sp"
            android:text="TOTAL $ " />

        <TextView
            android:id="@+id/text_vercom_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="total"
            android:textStyle="bold"
            android:textColor="#263238"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_12"  >
        >

        <Button
            android:id="@+id/button_firmar_pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_azul_1"
            android:textColor="#FFFFFF"
            android:text="Firmar" />

        <Button
            android:id="@+id/button_volver_pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/btn_celeste_1"
            android:textColor="#FFFFFF"
            android:layout_marginRight="7dp"
            android:text="Volver" />
    </LinearLayout>


    <ListView
        android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@+id/lin_13"  >
    </ListView>
</RelativeLayout>