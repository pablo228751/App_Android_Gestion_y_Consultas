<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        >

        <TextView
            android:id="@+id/text_cod_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elija CategorÃ­a"
            android:textColor="#0D47A1"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spin_usu_ag01"
            style="@android:style/Widget.Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_cod_buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Palabra"
        android:layout_gravity="center"
        android:layout_marginLeft="1dp"
        android:textColor="#0D47A1" />

    <EditText
        android:id="@+id/edit_cod_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginRight="3dp"
        android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/butt_cod_buscar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="Buscar"
            android:layout_weight="1"
            android:background="@drawable/btn_azul_1"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/butt_cod_atras"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/btn_azul_5"
            android:text="Volver"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text_np_operacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="#0D47A1" />

        <EditText
            android:id="@+id/edit_abcnp_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textSize="18sp" />


        <ImageButton
            android:id="@+id/menos"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:background="@drawable/menos" />
        <ImageButton
            android:id="@+id/mas"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:background="@drawable/mas" />

    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>