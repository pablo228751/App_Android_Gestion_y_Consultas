<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".padron">

    <EditText
        android:id="@+id/Edit_txt"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        android:focusableInTouchMode="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_txt3" />

    <EditText
        android:id="@+id/edit_txt2"
        android:layout_width="213dp"
        android:layout_height="52dp"
        android:layout_marginBottom="90dp"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:hint="DNI"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toTopOf="@+id/edit_txt"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/edit_txt"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toTopOf="@+id/edit_txt3"
        android:focusableInTouchMode="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/edit_txt3"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="374dp" />

    <Button
        android:id="@+id/buscar_padron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/btn_celeste_1"
        android:text="Buscar"
        app:layout_constraintBottom_toTopOf="@+id/edit_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edit_txt2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="213dp"
        android:layout_height="20dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:text="Ingrese Número de Afiliado"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_txt2"
        app:layout_constraintEnd_toEndOf="@+id/edit_txt2"
        app:layout_constraintStart_toStartOf="@+id/edit_txt2"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="112dp"
        android:layout_height="32dp"
        android:text="Obra Social"
        android:gravity="center"
        android:textColor="#0D47A1"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_txt3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="149dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="112dp"
        android:layout_height="32dp"
        android:text="Afiliado Nº"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#0D47A1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/Edit_txt"
        tools:layout_editor_absoluteX="149dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="112dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="Nombre"
        android:textSize="18sp"
        android:textColor="#0D47A1"
        app:layout_constraintBottom_toTopOf="@+id/edit_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Nombre" />

    <TextView
        android:id="@+id/txt_matricula2"
        android:layout_width="187dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edit_txt" />
</android.support.constraint.ConstraintLayout>