<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin2"
    android:paddingLeft="@dimen/activity_horizontal_margin2"
    android:paddingRight="@dimen/activity_horizontal_margin2"
    android:paddingTop="@dimen/activity_vertical_margin2"
    >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp" >

            <TextView
                android:id="@+id/text_paciente_tu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Paciente "
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/spin_paciente_tu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/et_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edit_fecha_tu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="dd/mm/yyyy"
                android:ems="10"
                android:gravity="center"
                android:textColor="@color/DatoCeleste"
                android:singleLine="true" >

                <requestFocus />
            </EditText>

            <ImageButton
                android:id="@+id/ima_calendario_tu"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:background="@drawable/calendario"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/et_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edit_hora_tu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:gravity="center"
                android:ems="10"
                android:inputType="time"
                android:hint="hh:mm"
                android:textColor="@color/DatoCeleste"
                android:singleLine="true" >
            </EditText>
            <ImageButton
                android:id="@+id/ima_hora_tu"
                android:layout_width="55dp"
                android:layout_height="50dp"

                android:background="@drawable/reloj"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/et_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/edit_detalle_tu"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:ems="10"
            android:minLines="3"
            android:singleLine="false"
            android:textColor="@color/DatoCeleste" />

        <TextView
            android:id="@+id/et_registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro"
            android:textColor="#000000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/butt_grabar_tu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/azul_1"
                android:text="Grabar"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/butt_volver_tu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:background="@color/azul_3"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text="VOLVER"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/butt_borrar_tu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:background="@color/DatoGris"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text="Borrar"
                android:textColor="#000000" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
