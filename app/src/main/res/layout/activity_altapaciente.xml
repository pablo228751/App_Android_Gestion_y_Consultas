<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/et_ve00_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:textColor="#000000"
        android:textSize="13sp"
        android:text="Edición de Pacientes" />

        <EditText
            android:id="@+id/edi_cta_pac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:gravity="right"
            android:textColor="#000000"
            android:ems="5" />


    </LinearLayout>

    <TextView
        android:id="@+id/text_ver_nrocta"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edi_nom_pac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:ems="5" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/text_dir_pac"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:text="Dirección"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edi_dir_pac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:ems="5" />

    <TextView
        android:id="@+id/text_abc_np_nro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teléfono"
        android:textSize="12sp"
        android:textColor="@color/design_default_color_primary_dark" />

    <EditText
        android:id="@+id/edi_te_pac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:ems="5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        android:textSize="13sp"
        android:textColor="@color/design_default_color_primary_dark" />

    <EditText
        android:id="@+id/edi_mail_pac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:ems="5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obra Social"
        android:textSize="12sp"
        android:textColor="@color/design_default_color_primary_dark" />

    <EditText
        android:id="@+id/edi_nos_pac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:ems="5" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IVA"
            android:textSize="12sp"
            android:textColor="@color/design_default_color_primary_dark" />

        <Spinner
            android:id="@+id/spin_iva_pac"
            style="@android:style/Widget.Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CUIT"
        android:textSize="12sp"
        android:textColor="@color/design_default_color_primary_dark" />

    <EditText
        android:id="@+id/edi_cuit_pac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="5"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/text_hor_pac"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:text="Nro de documento"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edi_doc_pac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="5"
        android:textColor="#000000"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/butt_grabar_verpac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_azul_1"
            android:text="Grabar"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/butt_volver_verpac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_azul_5"
            android:text="Borrar"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
