<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/text_cc_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Fecha" />

    <TextView
        android:id="@+id/text_cc_codigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/text_cc_fecha"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/black"
        android:text="Tipo" />

    <TextView
        android:id="@+id/text_cc_oper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/text_cc_codigo"
        android:layout_alignBaseline="@id/text_cc_fecha"
        android:textColor="@android:color/black"
        android:text="Oper" />

    <TextView
        android:id="@+id/text_cc_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:layout_alignRight="@+id/text_cc_codigo"
        android:layout_below="@+id/text_cc_fecha"
        android:text="Nombre "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/text_cc_monto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_cc_nombre"
        android:text="Importe"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_cc_saldo"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_cc_monto"
        android:layout_alignBottom="@+id/text_cc_monto"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="4dp"
        android:background="@android:color/holo_blue_light"
        android:text="Saldo"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_cc_apl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_cc_monto"
        android:layout_toRightOf="@id/text_cc_monto"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:text="Aplicado"
        android:visibility="invisible"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_cc_obs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_cc_monto"
        android:text="Obs" />

    <TextView
        android:id="@+id/text_cc_nro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text_cc_fecha"
        android:layout_alignBaseline="@id/text_cc_fecha"
        android:layout_marginLeft="10dp"
        android:text="Nro" />

</RelativeLayout>
