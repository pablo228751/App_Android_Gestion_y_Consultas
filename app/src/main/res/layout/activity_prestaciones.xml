<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="3dp"
    android:layout_marginTop="3dp"
    android:background="#FFFFFF"
    tools:context=".prestaciones" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <LinearLayout
            android:id="@+id/layoutuno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="CONSULTAR PRESTACIONES"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/et_ve00_mya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="Período    "
                android:textColor="#0D47A1" />

            <Spinner
                android:id="@+id/spin_agr_mes"
                style="@android:style/Widget.Spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin2"
                android:textAlignment="center" />


            <Spinner
                android:id="@+id/spin_agr_ano"
                style="@android:style/Widget.Spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginLeft="@dimen/activity_horizontal_margin2"
                android:paddingLeft="@dimen/activity_horizontal_margin2" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/et_ve00_usu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="Matrícula"
                android:textColor="#0D47A1" />

            <EditText
                android:id="@+id/edit_usu_ve00"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textStyle="bold"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:textColor="@color/colorAccent" />

            <Spinner
                android:id="@+id/spin_agr_ve00"
                style="@android:style/Widget.Spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin2" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_cc_monto1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="Afiliado"
                android:textColor="#0D47A1" />

            <EditText
                android:id="@+id/edit_zon_ve00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Ingrese Nº"
                android:inputType="numberDecimal"
                android:textColor="#000000">

                <requestFocus />
            </EditText>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_enviar_ve00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:background="@drawable/btn_celeste_1"
                android:textColor="@android:color/background_light"
                android:gravity="center"
                android:text="CONSULTAR"
                 />
            <Button
                android:id="@+id/button_volver_ve00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/background_light"
                android:background="@drawable/btn_azul_1"
                android:layout_marginRight="7dp"
                android:text="Fichas" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_cc_monto21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Cantidad: "
                android:layout_weight="1"
                android:textColor="#0D47A1"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edit_can_ve00"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:enabled="false"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textStyle="normal"
                android:textSize="14sp" >
            </EditText>

            <TextView
                android:id="@+id/TextViewto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/holo_blue_dark"
                android:text="Total: "
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edit_tot_ve00"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:enabled="false"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@android:id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true">

            </ListView>
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>