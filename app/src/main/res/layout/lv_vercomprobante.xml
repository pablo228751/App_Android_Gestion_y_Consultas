<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:background="@color/DatoFondo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/Calificacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Calificacion3">

        <TextView
            android:id="@+id/et_age_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#CC6600"
            android:layout_centerHorizontal="true"
            android:fontFamily="Calibri"
            android:text="CÃ³digo: "
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text_com_codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_cc_nombre"
            android:layout_toRightOf="@+id/Calificacion"
            android:textSize="13sp"
            android:text="codigo"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Calificacion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Calificacion">

        <TextView
            android:id="@+id/text_cc_obs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_com_cantidad"
            android:layout_centerHorizontal="true"
            android:textColor="#CC6600"
            android:fontFamily="Calibri"
            android:text="Cantidad: "
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text_com_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/text_cc_obs"
            android:textSize="13sp"
            android:text="cantidad"
            android:textColor="#FFFFFF" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Calificacion3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_com_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Calificacion"
            android:layout_alignLeft="@+id/Calificacion"
            android:layout_alignRight="@+id/text_com_monto"
            android:textStyle="bold"
            android:text="detalle"
            android:textColor="@color/DatoCeleste"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="42dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/text_com_monto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="precio"
        android:textSize="13sp"
        android:textColor="#CC6600"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</android.support.constraint.ConstraintLayout>